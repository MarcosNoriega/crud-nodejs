<div class="row mt-4">
    <div class="col">
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="busqueda" url="/articulos/buscar" placeholder="Buscar Articulos" aria-label="Recipient's username"
                aria-describedby="button-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-success" type="button" id="button-addon2"><i class="fa fa-search"></i></button>
            </div>
        </div>

        <div class="alert alert-success alert-dismissible fade show" id="mensaje" role="alert">
            <span id="text"></span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div id="Resultados">
            <table class="table table-striped mt-3">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Accion</th>
                    </tr>
                </thead>
        
                <tbody class="busqueda">
        
                </tbody>
            </table>
        </div>

       <div class="contenido">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Action</th>
                    </tr>
                </thead>
           
                <tbody>
                    {{#each articulos}}
                    <tr>
                        <td>{{Nombre}}</td>
                        <td>{{Precio}}</td>
                        <td>{{Stock}}</td>
                        <td>
                            <a href="/articulos/edit/{{IdArticulos}}" class="btn btn-warning edit" data-toggle="modal" data-target="#exampleModal"><i class="fa fa-edit"></i></a>
                            <a href="/articulos/delete/{{IdArticulos}}" class="btn btn-danger delete"><i class="fa fa-trash"></i></a>
                        
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Editar Articulo</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <form action="/articulos/update" method="POST">
                                            <div class="modal-body">
                                                <input type="hidden" name="id" id="txtId">
                                                <div class="group-form">
                                                    <label for="">Nombre</label>
                                                    <input type="text" class="form-control" name="Nombre" id="txtNombre">
                                                </div>

                                                 <div class="group-form">
                                                    <label for="">Precio</label>
                                                    <input type="number" class="form-control" name="Precio" id="txtPrecio">
                                                </div>

                                                 <div class="group-form">
                                                    <label for="">Stock</label>
                                                    <input type="number" class="form-control" name="Stock" id="txtStock">
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary save"><i class="fa fa-save"></i> Guardar Cambios</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
       </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-4">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item" disable="{{disable pagina 1}}" id="Primera"><a class="page-link" href="/articulos/1">Primera</a></li>
                {{#for 1 ultimaPag 1}}
                <li class="page-item"><a class="page-link" href="/articulos/{{this}}">{{this}}</a></li>
                {{/for}}
                <li class="page-item" disable="{{disable pagina ultimaPag}}" id="ultima"><a class="page-link" href="/articulos/{{ultimaPag}}">Ultima</a></li>
            </ul>
        </nav>
    </div>
</div>